<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="PxUsage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ArtBoardActivity"
    android:background="@drawable/ic_app_background">



    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="1350px"
        android:layout_height="wrap_content"
        android:layout_marginStart="119px"
        android:layout_marginTop="40px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logo_image_view"
            android:layout_width="139dp"
            android:layout_height="28dp"
            android:layout_marginTop="31px"
            android:src="@drawable/ic_app_logo"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="0dp"/>

        <include layout="@layout/people_count_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"/>


    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/user_board_recycler_view"
        android:layout_width="1350px"
        android:layout_height="match_parent"
        android:layout_marginStart="119px"
        android:layout_marginTop="24px"
        android:layout_below="@+id/title_layout"
        android:overScrollMode="never"
        tools:ignore="PxUsage">

    </android.support.v7.widget.RecyclerView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/user_sport_summary_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="96px"
        android:layout_marginEnd="46px"
        android:layout_marginBottom="8dp"
        android:layout_alignParentEnd="true"
        android:overScrollMode="never"
        tools:ignore="PxUsage">

    </android.support.v7.widget.RecyclerView>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="92dp"
        android:layout_height="18dp"
        android:layout_marginEnd="46px"
        android:layout_marginBottom="16px"
        android:src="@drawable/ic_app_logo_mini"
        android:layout_above="@+id/service_provider_manifest_tv"
        android:layout_alignParentEnd="true"/>


    <TextView
        android:id="@+id/service_provider_manifest_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="13px"
        android:layout_marginEnd="46px"
        android:layout_marginBottom="64px"
        android:textSize="8dp"
        android:textColor="#F5F5F5"
        android:text="@string/service_provider_manifest"
        android:background="@drawable/service_provider_manifest_bg"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>