<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icon_bg"
    android:focusable="false"
    tools:context=".ui.rank.RankActivity">

    <ImageView
        android:id="@+id/rk_gym_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:src="@drawable/icon_gym_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/rk_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:src="@mipmap/rank1"
        app:layout_constraintBottom_toBottomOf="@id/rk_gym_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/rk_gym_logo"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="本月排行榜"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/rk_logo"
        app:layout_constraintStart_toEndOf="@id/rk_logo"
        app:layout_constraintTop_toTopOf="@id/rk_logo"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/rk_real"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="@drawable/rank_real"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:nextFocusLeft="@id/rk_real"
        android:nextFocusRight="@id/rk_left"
        android:nextFocusUp="@id/rk_right"
        android:nextFocusDown="@id/rk_right"
        app:layout_constraintBottom_toBottomOf="@id/rk_gym_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/rk_gym_logo"
        tools:ignore="ContentDescription" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/rk_vp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="40dp"
        android:focusable="false"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rk_gym_logo" />


    <ImageView
        android:id="@+id/rk_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rank_left"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:nextFocusLeft="@id/rk_real"
        android:nextFocusRight="@id/rk_right"
        android:nextFocusUp="@id/rk_real"
        android:nextFocusDown="@id/rk_real"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/rk_vp"
        app:layout_constraintEnd_toStartOf="@id/rk_vp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/rk_vp"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/rk_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rank_right"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:nextFocusLeft="@id/rk_left"
        android:nextFocusRight="@id/rk_left"
        android:nextFocusUp="@id/rk_real"
        android:nextFocusDown="@id/rk_real"
        app:layout_constraintBottom_toBottomOf="@id/rk_vp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/rk_vp"
        app:layout_constraintTop_toTopOf="@id/rk_vp"
        tools:ignore="ContentDescription" />


</androidx.constraintlayout.widget.ConstraintLayout>