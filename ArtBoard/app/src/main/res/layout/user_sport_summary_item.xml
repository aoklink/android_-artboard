<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="8dp"
        android:paddingLeft="30dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="@drawable/user_sport_summary_item_bg">
        <TextView
            android:id="@+id/sport_summary_item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/sport_summary_item_text_example"
            android:lines="2"
            android:textColor="#fff5f5f5"
            android:textSize="10dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/sport_summary_item_value_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0-39%"
            android:maxLines="1"
            android:textColor="#fff5f5f5"
            android:textSize="14dp"
            android:layout_marginLeft="8dp"
            android:gravity="center" />
    </LinearLayout>

    <View
        android:id="@+id/sport_summary_item_label"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/user_sport_summary_item_label_bg"
        android:layout_gravity="center_vertical"/>
</FrameLayout>